<div class="container">

  <div class="profile-container">
    <div class="item-container">
      <div class="profile-image">
        <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, class: "avatar-border", height: 300, width: 300, crop: :fill %>
        <% end %>
      </div>
    <h1> Profile <%= @user.first_name%> <%= @user.last_name %></h1>
    <br>
    <br>
     <p> Bio <%= @user.bio%></p>
    </div>
  </div>

<br>
    <%= link_to "Update", edit_user_registration_path %> |
    <%= link_to "Delete", user_registration_path, method: :delete, data: { confirm: "You sure?" } %>

</div>


