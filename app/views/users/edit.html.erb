<div class="container">

  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name, label: 'First name' %>
    <%= f.input :last_name, label: 'Last name' %>
    <%#= f.input :password %>
    <%#= f.input :email, label: 'user@domain.com' %>
    <%= f.input :bio, label: 'Tell us about yourself' %>
