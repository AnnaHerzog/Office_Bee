
<div class="container">

  <p id="notice"><%= notice %></p>
  <h1>Hi <%= current_user.first_name %> !</h1>

  <h2>My offices</h2>
  <!-- <p>Find me in app/views/offices/show.html.erb</p> -->
    <br>
  <ul>
  <% current_user.offices.each do |office| %>
    <li>
      <h3><strong><%= link_to office.name, office_path(office)%></strong></h3>
      <p><strong> Availability: </strong> <%= office.start_date %> â€” <%= office.end_date %></p>
       <p><strong> Capacity: </strong> <%= office.max_capacity %>, <%= office.max_capacity - office.bookings.sum(:number_of_guests) %> spaces left</p>
       <p><strong> Address: </strong><%= office.address %></p>
       <p><strong>Price: </strong><%= office.price %> Euro</p>
        <% if office.photos.attached? %>
          <% office.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
           <% end %>
           <% else %>
            <img src="http://cdn.home-designing.com/wp-content/uploads/2018/06/industrial-style-home-office.jpg" />
          <% end %>
    </li>
    <% end %>
  </ul>


<h2>My bookings</h2>
<br>
<ul>
  <% current_user.bookings.each do |booking| %>
  <li>
    <h3><strong><%= link_to booking.office.name, booking_path(booking) %></strong></h3>
    <p><strong>Date: <%=booking.date %></strong> for <strong><%= booking.number_of_guests %></strong> persons </p>
     <p><strong>Address: </strong><%= booking.office.address %></p>
     <!-- <%#= API needed %> -->
     <p><strong>Total Price: </strong><%= booking.office.price %> Euros</p>

        <!--  booked   -->
  </li>
    <% end %>
</ul>

</div>
