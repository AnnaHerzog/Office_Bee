 <h2>You currently have <%= pluralize current_user.offices.size, "office"%> listed: </h2>
 <br>
 <div class="main-container">
  <div class="cards">
    <% if current_user.offices.first.nil? %>
      <p> List your office space now! </p>
      <p> <%= link_to "Create an office listing", offices_path, class: "btn-ghost" %> </p>
      <% else %>
        <% current_user.offices.each do |office| %>
          <div class="card-product dashboard-card" >
            <% if office.photos.attached? %>
              <% office.photos.each do |photo| %>
                <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, :class => "img_dashboard" %>
              <% end %>
            <% else %>
              <img src="http://cdn.home-designing.com/wp-content/uploads/2018/06/industrial-style-home-office.jpg" />
            <% end %>
          <div class="card-product-infos">
            <h2><%= link_to office.name, office_path(office)%></h2>
            <p> Availability:<%= office.start_date %> â€” <%= office.end_date %></p>
            <p>Capacity: <%= office.max_capacity %></p>
            <p> Address:<%= office.address %></p>
            <p>Price: <%= office.price %> Euro</p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

