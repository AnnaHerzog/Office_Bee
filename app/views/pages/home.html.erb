
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://assets.wallpapersin4k.org/uploads/2017/04/Color-Block-Wallpaper.jpg);">
  <div class="container">
    <h1>Office Bee</h1>
    <p>Explore office spaces near you or create your own!</p>

    <%= simple_form_for :search, url: offices_path, method: "get" do |f| %>
      <div class="search-form-control form-group">
        <div class="searchbars">
          <input class="office_address form-control string required" type="text" name="search[address]" id="search_query" placeholder="Address" />
          <input class="datepicker form-control string required" type="text" name="search[date]" id="search_query1" label = "Date" placeholder="Date" />
        </div>
        <button name="button" type="submit" class="btn btn-white">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  <div class="scroll-down text-center">
    <i class="fas fa-chevron-down"></i>
  </div>
  </div>
</div>

<div class="card-container">

  <div class="card-columns">

      <div class="card bg-info text-black text-center p-3">
      <blockquote class="blockquote mb-0">
        <p>"Seriously good"</p>
        <footer class="blockquote-footer text-white">
          <small>
            Some <cite title="Source Title">rando</cite>
          </small>
        </footer>
      </blockquote>
    </div>

    <% @offices.each do |office| %>
      <div class="card">
        <% if office.photos.attached? %>
          <% office.photos.each do |photo| %>
            <%= cl_image_tag photo.key, id: "card-img", crop: :fill %>
          <% end %>
        <% else %>
          <img src="http://cdn.home-designing.com/wp-content/uploads/2018/06/industrial-style-home-office.jpg" id="card-img" />
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= link_to office.name, office_path(office) %></h5>
          <p class="card-title"><%= office.description %></p>
          <p class="card-text"><small class="text-muted"><%= office.address %></small></p>
        </div>
      </div>
    <% end %>


    <div class="card bg-info text-black text-center p-3">
      <blockquote class="blockquote mb-0">
        <p>No other platform like this! Office Bee helped me find my dream co-working space!</p>
        <footer class="blockquote-footer text-white">
          <small>
            Someone famous in <cite title="Source Title">Le Wagon</cite>
          </small>
        </footer>
      </blockquote>
    </div>

  </div>
</div>
